<!-- /////////////////////// Student Login Page ////////////////////// -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>USICT Student Login</title>
    <link rel="stylesheet" href="../teacher_login/Teacher-Login-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>


    <!-- Navbar containing name and logo of University -->
    <div id="navbar1">
        <img src="../images/logo.jpg" alt="" class="logo">
        <br>
        <h1 class="collegeName">University School of Information, Communication & Technology</h1>
        <a href="../main/index.html" class="Home">Home </a>
    </div>


    
    <!-- Sign In form for students -->
    <div class="teacher" id="teacher">

        <div class="teacher-login-form">
            
            <div id="t1">
                <form action="/student_login" method="post" id="login-form">
                    <label for="user id">Student Id</label>
                    <input type="email" placeholder="example@ipu.com" name="login_ID" required>
                    <label for="password">Password</label>
                    <input type="password" name="Password" id="password" required>
                    <div>Show Password<input type="checkbox" id="checkbox1" onclick="checkbox()"></div>
                    <button type="submit" class="submit" id="submit">Login</button>
                </form>
            </div>

            <!-- It is shown when the password or user Id is incorrect -->
            <div id="t2" id="incorrectpassword" style="display: none;">
                <br>
                <br>
                <h3 id="Invalid">Invalid Student Id or Password</h3>
                <h3 id="correct">Please Enter Correct Teacher Id or Password</h3>
                <p onclick="display()" id="ok"> OK </p>
                <br>
                <br>
            </div>

        </div>

    </div>



    <!-- Footer -->
    <div class="footer">
        <a href="#" class="fa fa-facebook"></a>
        <a href="#" class="fa fa-twitter"></a>
        <a href="#" class="fa fa-google"></a>
        <a href="#" class="fa fa-linkedin"></a>
        <a href="#" class="fa fa-youtube"></a>
        <a href="#" class="fa fa-instagram"></a>
        <a href="#" class="fa fa-telegram"></a>
        <hr>
        <p>Copyright &copy; SS GROUP 2021</p>
    </div>


    <!-- Local js file -->
    <script src="../teacher_login/teacher_login.js"></script>


</body>

</html>
